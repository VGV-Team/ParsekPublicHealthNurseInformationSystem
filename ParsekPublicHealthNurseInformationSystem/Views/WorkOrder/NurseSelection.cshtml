@using Microsoft.Ajax.Utilities
@using ParsekPublicHealthNurseInformationSystem.ViewModels
@model ParsekPublicHealthNurseInformationSystem.ViewModels.WorkOrderNurseSelectionViewModel
@{
    ViewBag.Title = "Nov DN";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<h2>Izbira patronažne sestre</h2>


@using (Html.BeginForm("SelectNurseWorkOrder", "WorkOrder"))
{
    @Html.AntiForgeryToken()

    for (int i = 0; i < Model.Districts.Count; i++)
    {
        @Html.HiddenFor(model => Model.Districts[i])
    }

    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedNurseId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(
            model => model.SelectedNurseId,
            new SelectList(Model.PossibleNurses, "EmployeeId", "FullNameWithCode"),
            "-- Izberi --",
            htmlAttributes: new { @class = "form-control dropdown" })
            @Html.ValidationMessageFor(model => model.SelectedNurseId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedNurseReplacementId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(
            model => model.SelectedNurseReplacementId,
            new SelectList(Model.PossibleNursesReplacement, "EmployeeId", "FullNameWithCode"),
            "/",
            htmlAttributes: new { @class = "form-control dropdown" })
            @Html.ValidationMessageFor(model => model.SelectedNurseReplacementId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Naprej" class="btn btn-default" />
            </div>
        </div>
    </div>
}
