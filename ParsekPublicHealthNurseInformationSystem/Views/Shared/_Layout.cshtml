@{ 
    ParsekPublicHealthNurseInformationSystem.Models.User SessionUser =
        (ParsekPublicHealthNurseInformationSystem.Models.User) Session["user"];

    bool IsLoggedIn = false;
    int Role = -1;
    bool IsAdmin = false;
    bool IsPatient = false;
    bool IsEmployee = false;
    string DisplayName = "";
    string RoleString = "";

    bool IsDoctor = false;
    bool IsHead = false;
    bool IsNurse = false;
    bool IsCoworker = false;

    string LastLogin = "";



    if (SessionUser != null)
    {
        IsLoggedIn = true;
        Role = (int) SessionUser.Role.Title;
        if (Role == 1)
        {
            IsAdmin = true;
            DisplayName = "Admin";
            RoleString = "admin";
        }
        else if (Role == 2)
        {
            IsEmployee = true;
            DisplayName = SessionUser.Employee.Name;

            switch (SessionUser.Employee.Title)
            {
                case ParsekPublicHealthNurseInformationSystem.Models.Employee.JobTitle.Coworker: IsCoworker = true; RoleString = "sodelavec"; break;
                case ParsekPublicHealthNurseInformationSystem.Models.Employee.JobTitle.Doctor: IsDoctor = true; RoleString = "zdravnik"; break;
                case ParsekPublicHealthNurseInformationSystem.Models.Employee.JobTitle.Head: IsHead = true; RoleString = "vodja"; break;
                case ParsekPublicHealthNurseInformationSystem.Models.Employee.JobTitle.HealthNurse: IsNurse = true; RoleString = "sestra"; break;
                default: break;
            }
        }
        else if (Role == 3)
        {
            IsPatient = true;
            DisplayName = SessionUser.Patient.Name;
            RoleString = "pacient";
        }
        LastLogin = SessionUser.LastLastLogin.ToString();

    }


                }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PATRONAŽNI IS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                 
                    
                    @if (IsAdmin)
                    {
                        <li>@Html.ActionLink("Dodajanje zaposlenih", "", "AdminConsole")</li>
                    }

                    @if (IsNurse || IsHead || IsDoctor)
                    {
                        <li>@Html.ActionLink("Izpis DN", "Index", "WOFilter")</li>
                    }
                    @if (IsHead || IsDoctor)
                    {
                        <li>@Html.ActionLink("Kreiranje DN", "Index", "WorkOrder")</li>
                    }
                    @if (IsNurse)
                    {
                        <li>@Html.ActionLink("Planiranje obiskov", "Index", "VisitPlanner")</li>
                    }  
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (IsLoggedIn)
                    {
                    <li class="navbar-text">Zadnja prijava: @LastLogin</li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @if (!IsLoggedIn)
                            {
                                <span>Prijava/registracija</span>
                            }
                            else
                            {
                                <span>Pozdravljeni, @RoleString @DisplayName</span>
                            }
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @if (!IsLoggedIn)
                            {
                                <li>@Html.ActionLink("Registracija", "", "Register")</li>
                                <li>@Html.ActionLink("Prijava", "", "Login")</li>
                            }
                            @if (IsPatient)
                            {
                                <li>@Html.ActionLink("Moji pacienti", "", "AddPatient")</li>
                            }
                            @if (IsLoggedIn)
                            {
                                <li>@Html.ActionLink("Sprememba gesla", "", "ChangePassword")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Odjava", "Logout", "Login")</li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VGV Team</p>
        </footer>
    </div>

</body>
</html>
